#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    float n;
    cout<<"enter the float num: "<<endl;
    cin>>n;
    int rollup = floor(n);
    int rolldown = ceil(n);
    int nearestint;
    if(n-rollup<0.5){
            nearestint=rollup;

    }
    else{
        nearestint=rolldown;
    }
    cout<<"rollup: "<<rollup<<endl;
    cout<<"rolldown: "<<rolldown<<endl;
    cout<<"nearestint: "<<nearestint<<endl;
    return 0;
}
